<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>@ViewBag.Title</title>
	<meta name="description" content="">
	<meta name="author" content="">

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
	<link rel="apple-touch-icon" href="@Url.Content("~/apple-touch-icon.png")">
	
	@{
		@RenderSection("ViewHead", false)
		
		@MvcHtmlString.Create(Html.RenderCssHere(new List<IClientDependencyPath>
														   {
															   new BasicPath("Base", "~/Content/themes/base"),
															   new BasicPath("YardContent", "~/Areas/Shipyard/Content"),
															   new BasicPath("Content", "~/Content")
														   }))

		@MvcHtmlString.Create(Html.RenderJsHere(new List<IClientDependencyPath>
														  {
															  new BasicPath("Scripts", "~/Scripts"),
															  new BasicPath("googleCDN", "https://ajax.googleapis.com/ajax/libs/"),
															  new BasicPath("YardContent", "~/Areas/Shipyard/Content"),
															  new BasicPath("Content", "~/Content")
														  })) 
		<!--[if gte IE 8 ]> 
			<link href="@Url.Content("~/Content/globalIE.css")" rel="stylesheet" type="text/css">
		<![endif]-->
			<!--[if !IE 7]>
		<style type="text/css">
				#wrap {display:table;height:100%}
			</style>
		<![endif]-->
		
		Html.RequiresCss("yard-global.css", "YardContent", 102);
		Html.RequiresCss("global.en.css", "Content", 101);
		Html.RequiresCss("global.css", "Content", 100);
		Html.RequiresCss("html5.css", "Content", 99);
		Html.RequiresCss("handheld.css?v=2", "Content", 97, new { media = "handheld" });
		Html.RequiresCss("jquery.ui.theme.css", "Base", 96);

		Html.RequiresJs("jquery/1.7.2/jquery.min.js", "googleCDN", 1);

		Html.RequiresJs("jqueryui/1.8.18/jquery-ui.min.js", "googleCDN", 2);
		Html.RequiresJs("modernizr-2.5.3.js", "Scripts", 5);
		Html.RequiresJs("jquery.cookie.js", "Scripts", 9);

		Html.RequiresJs("global.js", "Scripts", 10);
		}

</head>
<body>
	
	<div id="logoLine">
		<img src="@Url.Content("~/Content/Global/logoRadaCodeNoText.png")" alt="RadaCode" id="logoImg"/>
		<span id="logoText">RadaCode</span>
	</div>
	
		<div id="main" role="main">
			@RenderBody()
		</div>
	

	<script type="text/javascript">	    !window.jQuery && document.write(unescape('%3Cscript src="@Url.Content("~/Scripts/libs/jquery-1.7.2.min.js")"%3E%3C/script%3E'))</script>
	<script src="@Url.Content("~/Scripts/plugins.js")" type="text/javascript"></script>
	<!--[if lt IE 7 ]>
	<script src="@Url.Content("~/Scripts/libs/dd_belatedpng.js")"></script>
	<script> DD_belatedPNG.fix('img, .png_bg');</script>
	<![endif]-->
</body>
</html>
